datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PlagiarismResult {
  createdAt  DateTime  @default(now())
  details    String?
  document   Document? @relation(fields: [documentId], references: [id])
  documentId String?
  id         String    @id @default(cuid())
  score      Float?
  updatedAt  DateTime  @updatedAt
}

model Document {
  createdAt         DateTime           @default(now())
  fileContent       Json?
  fileName          String?
  fileType          String?
  id                String             @id @default(cuid())
  plagiarismResults PlagiarismResult[]
  updatedAt         DateTime           @updatedAt
  user              User?              @relation(fields: [userId], references: [id])
  userId            String?
}

model User {
  createdAt DateTime   @default(now())
  documents Document[]
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
